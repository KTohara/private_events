<div class="row d-flex justify-content-center align-items-center">
  <div class="col-md-8 p-5 shadow-sm border rounded-5 border-primary bg-white">
    <h2 class="text-center mb-4 text-primary">Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label :email, class: "form-label"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border border-primary" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control border border-primary" %>
      </div>

      <p class="small">
        <%= link_to "Forgot password?", new_password_path(resource_name) %>
      </p>

      <div class="actions d-grid">
        <%= f.submit "Login", class: "btn btn-primary" %>
      </div>

      <div class="mt-3">
        <p class="mb-0 text-center">Don't have an account?
          <%= link_to "Sign Up", new_registration_path(resource_name), class: "text-primary fw-bold" %>
        </p>
      </div>
    <% end %>
  </div>
</div>