<div class="col m-1">
  <div class="list-group">
    <%= link_to event_url(event), class: "list-group-item list-group-item-action" do %>
      <div class="d-flex w-100 justify-content-between">
        <p class="h5 mb-2 fw-bold"><%= event.title %></p>
        <small><%= time_to_event(event.start_date) %></small>
      </div>
      <p class="mb-1">Location: <%= event.location %></p>
      <p class="mb-1"><small>Start Time: <%= formatted_date(event.start_date, event.start_time) %></small></p>
      <p class="mb-1"><small>End Time: <%= formatted_date(event.end_date, event.end_time) %></small></p>
      <p class="mb-1"><small>Host: <%= event.host.username.titleize %></small></p>
      <small>Description: <%= event.description.truncate_words(10) %></small>
    <% end %>
  </div>
</div>