<% events.each do |event| %>
  <div class="col mb-2">
    <div class="list-group">
      <%= link_to event_url(event), class: "mb-2 list-group-item list-group-item-action" do %>
        <div class="d-flex w-100 justify-content-between">
          <p class="h5 mb-2 fw-bold"><%= event.name %></p>
          <small><%= event.formatted_date %></small>
        </div>
        <p class="mb-1">Location: <%= event.location %></p>
        <p class="mb-1"><small>Host: <%= event.host.username.titleize %></small></p>
        <small>Description: <%= event.description.truncate(40) %></small>
      <% end %>
    </div>
  </div>
<% end %>