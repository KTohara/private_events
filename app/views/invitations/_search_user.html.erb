<%= turbo_frame_tag 'users', users do %>
  <% users.each do |user| %>
    <%= link_to user_path(user), class: "list-group-item list-group-item-action", id: "#{dom_id user}" do %>
      <div class="row justify-content-between align-items-center">
        <div class="col-auto me-auto">
          <%= user.username %>
        </div>
        <div class="col-auto d-flex justify-content-between align-items-center gap-2">
          <span>hithere</span>
          <%= button_to "Invite", user_path(user), class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>