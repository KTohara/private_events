<div class="mx-5 mb-3">
  <h3><%= @user.username.titleize %>'s Events</h3>
</div>
<p class="mx-5 fs-5">Created <%= pluralize(@user.created_events.count, 'Event' ) %></p>
<% if @user.created_events.empty? %>
  <div class="list-group mx-5">
    <p class="list-group-item"><%= @user.username.titleize %> has not made any events yet.</p>
  </div>
<% else %>
  <div class="mx-5">
    <%= render 'layouts/shared/events_list', events: @user.created_events %>
  </div>
<% end %>

<p class="mx-5 fs-5">Currently Attending <%= pluralize(@user.attending_events.future.count, 'Event') %></p>
<% if @user.attending_events.empty? %>
  <div class="list-group mx-5">
    <p class="list-group-item"><%= @user.username.titleize %> has not attended any events yet.</p>
  </div>
<% else %>
  <div class="mx-5">
    <%= render 'layouts/shared/events_list', events: @user.attending_events.future %>
  </div>
<% end %>

<p class="mx-5 fs-5">Attended <%= pluralize(@user.attending_events.past.count, 'Past Event') %></p>
<% if @user.attending_events.past.empty? %>
  <div class="list-group mx-5">
    <p class="list-group-item"><%= @user.username.titleize %> has not attended any events yet.</p>
  </div>
<% else %>
  <div class="mx-5">
    <%= render 'layouts/shared/events_list', events: @user.attending_events.past %>
  </div>
<% end %>